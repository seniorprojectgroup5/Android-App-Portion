<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:stretchColumns="0">

    <TableRow android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/songBox"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/txt_SongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="@color/PowderBlue" />

            <TextView
                android:id="@+id/txt_ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="@color/GreyBlue" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spn_songDropDown"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_more_vert_black_24dp"
            android:foregroundGravity="left|center"
            android:foregroundTint="@color/HoneyGold"
            android:paddingTop="24dp"
            android:paddingEnd="64dp"
            android:paddingBottom="24dp"
            android:popupBackground="@color/PowderBlue" />


    </TableRow>


</TableLayout>